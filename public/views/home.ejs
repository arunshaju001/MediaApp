<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" type="text/css" href="/css/styles.css" />
        <link rel="stylesheet" href="/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="bootstrap-3.3.7-dist/css/bootstrap.min.css"/>
        <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        

        <title>Home</title>
    </head>
    <body>

      <!-- Header Navs -->
      <header>
            <%- include('./partials/header'); %>
      </header>

        <!-- Weather -->
      <div class="" style="background-color: darkgray; color: darkblue;">
            <center>
                <div class="row">
                    <div class="col-3 pt-2 border"><b>Weather : <%=weather.weather[0]['main']%></b></div>
                    <div class="col-3 border"><img src='https://openweathermap.org/img/w/<%=weather.weather[0].icon%>.png' alt="weather"/></div>
                    <div class="col-3 pt-2 border"><b>Temp : <%=(weather.main.temp)-273.15%>Â°C</b></div>
                    <div class="col-3 pt-2 border"><b>City :<%=weather.name%></b></div>
                </div>
            </center>
      </div>

      <hr style="height:1px;border-width:10;color:rgb(14, 0, 136);background-color:rgb(86, 49, 146); margin: 5px;">

      <!-- Chat box -->
      <div id="generalchat" class="col-4" style="float:right; display:none"><%- include('./partials/chat'); %></div>

      <!-- Slider -->
      <div class="row" style="background-color:  #1B1B1B;">
          <div class="col"></div>
          <center>
          <slider >
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                  <%  for(var i=0; i<images.length; i++) {%>
                  <div class="carousel-item <% if(i==0){ %>active <% } %>">
                    <img class="d-block w-100" src="<%='/images/'+(images[i])%>" alt="First slide">
                  </div>
                  <% } %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
          </slider>
          </center>
          <div class="col"></div>

      </div>

      <hr style="height:1px;border-width:10;color:rgb(14, 0, 136);background-color:rgb(86, 49, 146); margin: 5px;">


      <!-- News headings -->
      <div class="" style="color: white;">
        <center >
            <div class="row">
                <div id="news" class="col-4 pt-2 border"  ><b><%=news[0].title%></b><br><%=news[0].newsdesc%></div>
                <div id="news" class="col-4 pt-2 border"  ><b><%=news[1].title%></b><br><%=news[1].newsdesc%></div>
                <div id="news" class="col-4 pt-2 border"  ><b><%=news[2].title%></b><br><%=news[2].newsdesc%></div>
            </div>
        </center>
      </div>

      <!-- chat button -->
      <div class="row">
        <center class="col-8">
          <h2>Some story related to news</h2>
        </center>
        <button id="popup" class ="col-4" onclick="myFunction()">General Discussions</button>
        <script> 
          function myFunction() {
            var x = document.getElementById("generalchat");
            if (x.style.display === "none") {
              x.style.display = "block";
            } else {
              x.style.display = "none";
            }
          }
        </script>                  
      </div>
      

      <!-- Footer -->
      <footer>
            <%- include('./partials/footer'); %>
      </footer>

    </body>
</html>
    